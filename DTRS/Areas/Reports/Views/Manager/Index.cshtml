                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#"><i class="glyphicon glyphicon-plus"></i> Add New</a>
                            <a class="dropdown-item" href="#">Settings 2</a>
                        </div>
                    </li>*@
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        <p class="text-muted font-13 m-b-30">

                        </p>
                        <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.totalRecruiter)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.totalSubmission)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.totalInterview)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.totalPO)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.totalCandidate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Location)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ManagerName)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.totalRecruiter)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.totalSubmission)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.totalInterview)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.totalPO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.totalCandidate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Location)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ManagerName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
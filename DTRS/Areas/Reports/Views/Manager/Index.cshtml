@model IEnumerable<DTRS.Models.ReportModel.ManagerReportModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainDesignLayout.cshtml";
}
<div class="col-md-12 col-sm-12 ">
    @Html.Partial("_alertShow")

    <div class="x_panel">
        <div class="x_title">
            <h2>User Roles <small></small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="@Url.Action("Create","UserLoginManage",new { @area = "admin" })" class="btn btn-sm btn-secondary" style="color:white"><i class="glyphicon glyphicon-plus"></i> Add New</a>
                </li>
